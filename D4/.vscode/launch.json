    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Server",
            "request": "launch",
            "mainClass": "swf.d4.Server",
            "projectName": "cookie",
            "args": "12345 Cookies.json"
        },
        {
            "type": "java",
            "name": "Launch Client",
            "request": "launch",
            "mainClass": "swf.d4.Client",
            "projectName": "cookie",
            "args": "localhost:12345"
        }
    ],
    "compounds": [
        {
            "name": "Launch Server and Client",
            "configurations":["Launch Server","Launch Client"]
        }
    ]
}